{
  "files": ["src"],
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "dist",
    "module": "ES2022",
    "moduleResolution": "Node16",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowImportingTsExtensions": false,
    "checkJs": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true
  }
}
