{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "dist",
    "incremental": true,
    "rootDir": "src",
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "module": "ES2022",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowImportingTsExtensions": false,
    "forceConsistentCasingInFileNames": true,
    "checkJs": true,
    "allowJs": true
  },
  "include": ["src"]
}
