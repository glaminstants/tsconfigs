{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "Node16",
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowImportingTsExtensions": false,
    "forceConsistentCasingInFileNames": true,
    "checkJs": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": ["./src"]
}
