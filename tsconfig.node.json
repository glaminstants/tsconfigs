{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "Node16",
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowImportingTsExtensions": false,
    "forceConsistentCasingInFileNames": true,
    "checkJs": true,
    "allowJs": true
  },
  "include": ["src"]
}
